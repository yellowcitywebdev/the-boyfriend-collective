---
import { Image } from "astro:assets";
import aboutImage from "../../public/about-image.webp";
---

<div id="about" class="max-w-screen-xl items-center py-24 md:flex">
  <div
    class="relative order-first flex w-full justify-center p-10 sm:order-first md:w-1/2"
  >
    <div
      class="animate-float-up absolute left-[-50px] top-[0px] z-0 md:left-[-60px] lg:left-[0px]"
    >
      <img src="/about-blob-one.webp" class="" alt="Top-left graphic" />
    </div>

    <div
      class="animate-float-down absolute bottom-[-40px] right-[-20px] z-0 lg:right-[20px]"
    >
      <img src="/about-blob-two.webp" class="" alt="Bottom-right graphic" />
    </div>

    <div class="relative mt-8">
      <Image
        src={aboutImage}
        loading="eager"
        class="align-center z-10 mx-auto w-96 rounded-3xl border-8 border-red-300 shadow-2xl"
        alt="image of doctor so-and-so, phd"
      />
    </div>
  </div>

