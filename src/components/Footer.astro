---
import Brand from "./BrandFooter.astro";
const today = new Date();
---

<style>
  .address {
    white-space: pre-line; /* Maintains line breaks */
  }
</style>

<div class="-mb-1 text-primary-600">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path
      fill="currentColor"
      fill-opacity="1"
      d="M0,64L48,90.7C96,117,192,171,288,186.7C384,203,480,181,576,197.3C672,213,768,267,864,256C960,245,1056,171,1152,154.7C1248,139,1344,181,1392,202.7L1440,224L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
      style="--darkreader-inline-fill: #007acc;"
      data-darkreader-inline-fill=""></path>
  </svg>
</div>

<footer class="bg-primary-600 shadow">
  <div class="mx-auto w-full max-w-screen-xl px-4 pb-8 pt-12 lg:pt-24">
    <div class="md:justify-between lg:flex">
      <Brand />
    </div>
    <hr class="border-t-1 my-6 border-white sm:mx-auto lg:my-8" />
    <!-- info  -->
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <span class="text-sm text-white sm:text-center"
          >&copy; {today.getFullYear()}
          <a
            href="/"
            class="text-primary-200 hover:text-primary-200 hover:underline"
            >The Boyfriend Collectiveâ„¢</a
          >. All Rights Reserved.
        </span>
        <span class="text-sm text-white sm:text-center">
          Site designe by
          <a
            href="/"
            class="text-primary-200 hover:text-primary-200 hover:underline"
            >yellowcityweb.dev</a
          >.
        </span>
      </div>

      <!-- social svgs -->
      <div class="mt-4 flex sm:mt-0 sm:justify-center">
        <a href="#" class="ms-5 text-primary-300 hover:text-gray-300">
