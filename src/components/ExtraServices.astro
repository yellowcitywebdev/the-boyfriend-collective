---
import { Image } from "astro:assets";
import servicesImage from "../../public/extra-services.webp";
import ContainerBGRed from "./ContainerBGRed.astro";
---

<ContainerBGRed>
  <div class="mb-8 mr-80 mt-8 flex justify-center">
    <img
      src="/section-break-three.webp"
      alt="section break one"
      class="hidden h-auto w-full max-w-xs md:block"
    />
  </div>

  <div class="max-w-screen-xl items-center py-32 md:flex">
    <div
      class="relative order-first flex w-full justify-center p-10 sm:order-last md:w-1/2"
    >
      <div
        class="absolute left-[-20px] top-[0px] z-0 animate-float-up md:left-[-60px] lg:left-[0px]"
      >
        <img src="/services-blob-one.webp" class="" alt="Top-left graphic" />
      </div>
      <div
        class="absolute bottom-[-40px] right-[-20px] z-0 animate-float-down lg:right-[20px]"
      >
        <img
          src="/services-blob-two.webp"
          class=""
          alt="Bottom-right graphic"
        />
      </div>
      <div class="relative mt-8">
        <Image
          src={servicesImage}
          loading="eager"
          class="align-center z-20 mx-auto w-96 rounded-3xl border-8 border-primary-500 shadow-2xl"
          alt="image of doctor so-and-so, phd"
        />
      </div>
    </div>

    <div class="order-last w-full p-5 sm:order-first md:w-1/2">
