---
import ContactInfo from "../components/ContactInfo.astro";
---

<section
  id="contact"
  class="my-24 grid grid-cols-1 rounded-3xl border-8 border-primary-600 bg-black shadow-2xl lg:grid-cols-3"
>
  <div class="lg:col-span-2">
    <div class="mt-16 lg:mt-0">
      <div class="mx-auto max-w-screen-md px-4 py-8 lg:pb-8 lg:pt-16">
        <div class="text prose text-gray-600">
          <h2 class="neonTextStatic logo my-4 text-3xl font-bold sm:text-4xl">
            Let's chat
          </h2>
          <div class="text-justify text-gray-300">
            <p>
              Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid,
              commodi doloremque, fugiat illum magni minus nisi nulla numquam
              obcaecati placeat quia, repellat tempore voluptatum.
            </p>
          </div>
        </div>
        <form
          name="contact"
          method="POST"
          id="form"
          data-astro-reload
          class="space-y-4"
          data-netlify="true"
        >
          <div>
            <label
              for="name"
              class="mb-2 block text-lg font-medium text-primary-600"
              >Your name</label
            >
            <input
              type="text"
              name="name"
              id="name"
              class="block w-full rounded-lg border-2 border-primary-500 bg-primary-200 p-4 text-sm text-gray-900 ring-primary-500 hover:border-primary-500 hover:ring-2 focus:border-primary-600 focus:ring-primary-600"
              placeholder="John Doe"
              required
            />
          </div>
          <div>
            <label
              for="email"
              class="mb-2 block text-lg font-medium text-primary-600"
              >Your email</label
            >
            <input
              type="email"
              name="email"
              id="email"
              class="block w-full rounded-lg border-2 border-primary-500 bg-primary-200 p-4 text-sm text-gray-900 ring-primary-500 hover:border-primary-500 hover:ring-2 focus:border-primary-600 focus:ring-primary-600"
              placeholder="john.doe@gmail.com"
              required
            />
          </div>
          <div>
            <label
              for="subject"
              class="mb-2 block text-lg font-medium text-primary-600"
              >Subject</label
            >
            <input
              type="text"
              name="subject"
              id="subject"
              class="block w-full rounded-lg border-2 border-primary-500 bg-primary-200 p-4 text-sm text-gray-900 ring-primary-500 hover:border-primary-500 hover:ring-2 focus:border-primary-600 focus:ring-primary-600"
              placeholder="Let us know how we can help you"
              required
            />
          </div>
          <div class="sm:col-span-2">
            <label
              for="message"
              class="mb-2 block text-lg font-medium text-primary-600"
              >Your message</label
            >
            <textarea
              id="message"
              name="message"
              rows="6"
              minlength="10"
              class="block w-full rounded-lg border-2 border-primary-500 bg-primary-200 p-4 text-sm text-gray-900 ring-primary-500 hover:border-primary-500 hover:ring-2 focus:border-primary-600 focus:ring-primary-600"
              placeholder="Leave a comment..."
              required></textarea>
          </div>
          <button
            type="submit"
            class="rounded-3xl bg-primary-600 px-6 py-4 text-center font-bold text-white hover:bg-primary-500"
            >Send message</button
          >
        </form>
      </div>
    </div>
  </div>
  <div class="content-center lg:col-span-1">
    <ContactInfo />
  </div>
</section>
